<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd"
    default-init-method="init"
    default-destroy-method="after">

	<bean id="helloWorld" 
				class="com.cmcc.sunyiwei.springframework.HelloWorld"
				scope="singleton">
		<property name="name" value="lisa" />
	</bean>
	
	<bean id="helloWorldWithInitAndDestroy"
				class="com.cmcc.sunyiwei.springframework.HelloWorldWithInitAndDestroy">
				<property name="name" value="sunyiwei" />
	</bean>
</beans>