	</servlet>
	
	<servlet-mapping>
		<servlet-name>TestInitParamServlet</servlet-name>
		<url-pattern>/TestInitParamServlet</url-pattern>
	</servlet-mapping>
	
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
