		<url-pattern>/RequestServlet</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>TestInitParamServlet</servlet-name>
		<servlet-class>com.cmcc.sunyiwei.TestInitParamServlet</servlet-class>
		<init-param>
			<param-name>sunyiwei</param-name>
			<param-value>syw514912821</param-value>
		</init-param>
		
		<init-param>
			<param-name>Lisa</param-name>
			<param-value>lisaFly</param-value>
